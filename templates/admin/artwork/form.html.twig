{% extends 'admin.base.html.twig' %}

{% block body %}

    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="col d-inline-flex justify-content-between">
            <h1 class="h3 mb-2 text-gray-800">Ajout d'une oeuvre</h1>
        </div>

        <!-- DataTales Example -->
        <div class="card shadow mb-4">

            <div class="card-body">
                {{ form_start(form, { attr : { novalidate: 'novalidate' , class : 'user'} }) }}
                <p>
                    {{ form_widget(form.name) }}
                </p>
                <p>
                    {{ form_label(form.description, 'Description: ') }}
                    {{ form_widget(form.description) }}
                </p>
                <p>
                    {{ form_label(form.image, 'Image: ') }}
                    {{ form_widget(form.image) }}
                </p>
                <p>
                    {{ form_label(form.categories, 'Cat√©gories: ') }}
                    {{ form_widget(form.categories) }}
                </p>
                <p>
                    <input type="submit" value="Valider" class="btn btn-primary btn-user btn-block">
                </p>
                {{ form_end(form) }}
            </div>
        </div>
    </div>


{% endblock %}