<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}{% endblock %}

    {{ encore_entry_link_tags('app') }}




    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
</head>
<body>
<div id="wrapper">

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

            <!-- Topbar -->
            <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                <div class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
                    <a href="{{ path('home.index') }}">
                        <i class="fas fa-home fa-3x"></i>
                    </a>
                </div>



                <!-- Topbar Navbar -->
                <ul class="navbar-nav ml-auto">




                    <!-- Nav Item - User Information -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Oeuvres
                        </a>
                        <div class="dropdown-menu dropdown-menu-right animated--grow-in" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="{{ path("site.artwork.index") }}">Tous</a>
                            <a class="dropdown-item" href="{{ path("site.artwork.category.index", { 'category': 'peinture' }) }}">Peinture</a>
                            <a class="dropdown-item" href="{{ path("site.artwork.category.index", { 'category': 'peinture' }) }}">Dessin</a>
                            <a class="dropdown-item" href="{{ path("site.artwork.category.index", { 'category': 'peinture' }) }}">Sculpture</a>
                            <div class="dropdown-divider"></div>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('site.expo.index') }}" role="button">
                            Expositions
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('contact.form') }}" role="button">
                            Contact
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('site.mentions.legales.index') }}" role="button">
                            Mentions l√©gales
                        </a>
                    </li>
                    {% if not app.user %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('security.login') }}" role="button">
                            Connexion
                        </a>
                    </li>

                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('dashboard.index') }}" role="button">
                                Tableau de bord
                            </a>
                        </li>
                    {% endif %}

                </ul>

            </nav>
            <!-- End of Topbar -->

            <!-- Begin Page Content -->
            <div class="container-fluid">

                <!-- Page Heading -->


                {% block body %}{% endblock %}



            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->


        <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->
{% block javascripts %}{% endblock %}
</body>


{{ encore_entry_script_tags('app') }}

</html>
